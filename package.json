{
  "name": "devicescript-gateway",
  "version": "0.1.0",
  "description": "Development Gateway infrastructure supporting DeviceScript.",
  "license": "MIT",
  "private": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "connection": "cd infra && zx ./connection.mjs",
    "provision": "cd infra && zx ./provision.mjs",
    "unprovision": "cd infra && zx ./unprovision.mjs",
    "debug": "cd infra && zx ./debug.mjs",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "local": "node infra/local.mjs",
    "dev": "yarn build && yarn local",
    "zip": "yarn build && rm -f pkg.zip && 7z a pkg.zip dist/ node_modules/ power-connector/ package.json -x!node_modules/typescript -x!node_modules/@types -xr!test",
    "deploy": "yarn zip && az webapp deployment source config-zip --resource-group Jacdac-Cloud  --name jacdac-portal2 --src pkg.zip"
  },
  "dependencies": {
    "@azure/data-tables": "^13.2.0",
    "@azure/event-hubs": "^5.8.0",
    "@azure/identity": "^3.1.3",
    "@azure/keyvault-secrets": "^4.6.0",
    "@azure/storage-blob": "^12.11.0",
    "@fastify/basic-auth": "^4.0.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/static": "^6.5.0",
    "@fastify/websocket": "^7.1.0",
    "aedes": "^0.48.0",
    "applicationinsights": "^2.5.0",
    "fastify": "^4.9.2",
    "http-errors": "^2.0.0",
    "node-fetch": "^2.6.7",
    "openapi-types": "^12.1.0",
    "pino-pretty": "^9.1.1",
    "swagger-ui-dist": "^4.15.0"
  },
  "devDependencies": {
    "@octokit/core": "^4.2.0",
    "@types/http-errors": "^1.8.2",
    "@types/node": "16.x",
    "@types/ws": "^8.5.3",
    "dotenv": "^16.0.3",
    "libsodium-wrappers": "^0.7.11",
    "typescript": "^4.0.0",
    "xmlbuilder2": "^3.0.2",
    "zx": "^7.2.0"
  }
}
